<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="330dp"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_spiner_popup"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_ver"
        android:orientation="horizontal"
        android:showDividers="middle">

        <RadioGroup
            android:id="@+id/rgShi"
            android:layout_width="@dimen/divider_0_5dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="几室："
                android:textColor="@color/text"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rbShi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="一室"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbShi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="二室"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbShi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="三室"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbShi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:text="≧四室"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgTing"
            android:layout_width="@dimen/divider_0_5dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="几厅："
                android:textColor="@color/text"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rbTing1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="一厅"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbTing2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="二厅"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbTing3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:text="≧三厅"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgWei"
            android:layout_width="@dimen/divider_0_5dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="卫生间："
                android:textColor="@color/text"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rbWei1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="一卫"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbWei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="二卫"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbWei3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:text="≧三卫"
                android:textColor="@color/bg_color_blue"
                android:textSize="14sp"/>
        </RadioGroup>
    </LinearLayout>

    <include layout="@layout/layout_dialog_bottom_btn"/>
</LinearLayout>