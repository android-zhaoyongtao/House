<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llNoNet"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/nodata"
              android:gravity="bottom"
              android:orientation="vertical"
              android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_empty"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_wifi_offline"/>

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络竟然崩溃了"
            android:textColor="@color/grey"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_empty_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="别紧张，试试看刷新页面"
            android:textColor="@color/grey"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="刷新"
            android:layout_marginTop="18dp"
            android:textSize="14dp"
            android:background="@drawable/bg_btn_selector_gray"
            android:textColor="@color/blue"
            />

    </LinearLayout>
</LinearLayout>
